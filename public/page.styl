html, body
	height 100%

#topicsList

	.list-group
		border-radius 5px
		overflow scroll
		max-height 250px

		a.list-group-item
			border-width 0
			border-top-width 1px
			padding 7px 13px
			width 100%

			&:first-of-type
				border-top-width 0

.popover
	max-width 100%
	width 100%

#relatedArticles
	
	.list-group
		border-bottom solid 1px rgb(221, 221, 221)
		overflow scroll
		height 246px

		a.list-group-item
			position relative

			svg
				position absolute
				right 2px
				top 2px

				circle
					fill rgba(225, 225, 225, 0.4)

				path
					fill rgba(100, 100, 100, 1)

	.panel-body
		overflow scroll
		height 314px